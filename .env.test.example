# =============================================================================
# STRIPE (Utiliser les clés de TEST)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_VOTRE_CLE_TEST
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_VOTRE_CLE_TEST
STRIPE_WEBHOOK_SECRET=whsec_VOTRE_SECRET_TEST
